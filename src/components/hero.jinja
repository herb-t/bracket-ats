<section class="hero" id="ats">
  <div class="hero__bg" style="background-image: url({{ 'bg-hero.jpg'|static }});"></div>

  {# <img src="{{ 'bg-hero.jpg'|static }}" class="hero__bg" alt="A Touch Of Sweetness"> #}
  <div class="h-c-page">
    <div class="h-c-grid">
      <div class="h-c-grid__col h-c-grid__col--6 h-c-grid__col--align-middle">
        <div class="hero__copy">
          <div class="hero__title h-u-mb-l">
            <h1 class="h-c-headline h-c-headline--two h-has-top-margin h-has-bottom-margin">{{hero.title | safe}}</h1>
          </div>

          <div class="hero__text h-u-mb-xl">
            <p class="h-c-copy">{{hero.text}}</p>
          </div>
        </div>
      </div>

      <div class="h-c-grid__col h-c-grid__col--6 h-c-grid__col--align-middle">
        <div class="hero__logo">
          {% include "components/logo.jinja" %}
        </div>

      </div>
    </div>
  </div>
</section>